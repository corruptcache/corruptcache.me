    }
    .sidebar-list a {
        color: #a66bff;
        text-decoration: none;
    }
    .sidebar-list a:hover {
        text-decoration: underline;
    }

    /* --- RESPONSIVE DESIGN --- */
    @media (max-width: 768px) {
      body::after {
          display: none;
      }
      .navbar {
          top: 0;
      }
      .container {
          flex-direction: column;
      }
    }
  </style>
</head>

