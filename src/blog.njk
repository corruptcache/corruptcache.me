---
layout: base.njk
title: Blog
permalink: /blog/index.html
---

{% include "components/nav.njk" %}

<div class="container">
  <main>
    <h1>Blog</h1>
    
    {% for post in collections.blog | reverse %}
      <article class="terminal-window">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p class="post-meta">Published on {{ post.date | date("MMMM d, yyyy") }} by CorruptCache</p>
        {% if post.data.description %}
          <p class="post-excerpt">{{ post.data.description }}</p>
        {% endif %}
        {% if post.data.tags %}
          <div class="post-tags">
            {% for tag in post.data.tags %}
              <a href="/tags/{{ tag | slugify }}/" class="tag-badge">{{ tag }}</a>
            {% endfor %}
          </div>
        {% endif %}
        <a href="{{ post.url }}" class="cta-button">Read More &rarr;</a>
      </article>
    {% endfor %}

  </main>

  <aside>
      <div class="terminal-window sidebar-widget">
          <h4>Categories</h4>
          {% if collections.tagList.length > 0 %}
              <ul class="sidebar-list">
                  {% for tag in collections.tagList %}
                      <li><a href="/tags/{{ tag | slugify }}/">{{ tag }}</a></li>
                  {% endfor %}
              </ul>
          {% endif %}
      </div>
      <div class="terminal-window sidebar-widget">
          <h4>Archives</h4>
          {% if collections.postsByMonth %}
              <ul class="sidebar-list">
                  {% for month, posts in collections.postsByMonth %}
                      <li><a href="/archive/{{ month | slugify }}/">{{ month }} ({{ posts.length }})</a></li>
                  {% endfor %}
              </ul>
          {% endif %}
      </div>
  </aside>
</div>

{% include "components/footer.njk" %}
