  <style>
    /* Global Resets and Basic Setup */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      color: #e0e0e0;
      font-family: 'Share Tech Mono', monospace;
      background-color: #0f0f0f;
      overflow-x: hidden;
    }
    
    .main-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* --- PROFILE HEADER --- */
    .profile-header {
        display: flex;
        align-items: center;
        gap: 2rem;
        padding: 2rem;
        border-bottom: 1px solid #333;
        margin-bottom: 2rem;
    }
    .profile-avatar a {
        display: block;
    }
    .profile-avatar img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 2px solid #a66bff;
        transition: filter 0.2s ease-in-out;
    }
    .profile-avatar a:hover img {
        filter: drop-shadow(0 0 5px #a66bff);
    }
    .profile-info {
        font-family: 'VT323', monospace;
    }
    .profile-info h1 {
        font-size: 2.5rem;
        color: #e0e0e0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .profile-info h1 a {
        color: inherit;
        text-decoration: none;
        transition: text-shadow 0.2s ease-in-out;
    }
    .profile-info h1 a:hover {
        text-shadow: 0 0 5px #a66bff;
    }
    .verified-badge {
        width: 28px;
        height: 28px;
        fill: #a66bff;
        animation: badge-glitch 2s infinite linear;
    }
    @keyframes badge-glitch {
        0%, 100% { transform: translate(0, 0); }
        25% { transform: translate(-1px, 1px); }
        50% { transform: translate(1px, -1px); }
        75% { transform: translate(-1px, 1px) skew(-3deg); }
    }
    .profile-stats {
        display: flex;
        gap: 2rem;
        margin-top: 1rem;
        font-size: 1.2rem;
    }
    .profile-stats span {
        color: #a66bff;
        font-weight: bold;
    }
    .profile-bio {
        margin-top: 1.5rem;
        font-family: 'Share Tech Mono', monospace;
        font-size: 1rem;
        line-height: 1.6;
        color: #c5c5c5;
    }
    .profile-bio a {
        color: #a66bff;
        text-decoration: none;
        transition: color 0.2s ease-in-out, text-shadow 0.2s ease-in-out;
    }
    .profile-bio a:hover {
        color: #e0e0e0;
        text-shadow: 0 0 3px #a66bff;
    }

    /* --- PHOTO GRID --- */
    .photo-grid {
        column-count: 3;
        column-gap: 1rem;
    }
    .photo-item {
        margin-bottom: 1rem;
        display: inline-block;
        width: 100%;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        border-radius: 8px;
    }
    .photo-item img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s ease, filter 0.3s ease;
    }
    .photo-item:hover img {
        transform: scale(1.05);
        filter: brightness(0.8);
    }
    .photo-item .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        font-size: 1.2rem;
        text-align: center;
        padding: 1rem;
    }
    .photo-item:hover .overlay {
        opacity: 1;
    }

    /* --- LIGHTBOX --- */
    .lightbox {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 3000;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }
    .lightbox.active {
        opacity: 1;
        pointer-events: all;
    }
    .lightbox-content {
        max-width: 90vw;
        max-height: 90vh;
        position: relative;
    }
    .lightbox-content img {
        max-width: 100%;
        max-height: 80vh;
        display: block;
        border-radius: 8px;
    }
    .lightbox-caption {
        color: white;
        text-align: center;
        margin-top: 1rem;
        font-family: 'Share Tech Mono', monospace;
        font-size: 1.1rem;
    }
    .lightbox-close {
        position: absolute;
        top: -40px;
        right: -20px;
        color: white;
        font-size: 3rem;
        cursor: pointer;
        font-family: 'VT323', monospace;
        background: none;
        border: none;
    }
    
    /* --- RESPONSIVE DESIGN --- */
     @media (max-width: 960px) {
        .photo-grid {
            column-count: 2;
        }
     }
     @media (max-width: 768px) {
        .profile-header {
            flex-direction: column;
            text-align: center;
        }
        .profile-stats {
            justify-content: center;
        }
     }
     @media (max-width: 500px) {
        .photo-grid {
            column-count: 1;
        }
     }
  </style>
</head>
