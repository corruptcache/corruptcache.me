---
layout: base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag | slugify }}/index.html
---

{% include "components/nav.njk" %}

<div class="container">
  <main>
    <h1>Tagged: {{ tag }}</h1>

    {% for post in collections[tag] | reverse %}
      <article class="terminal-window">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p class="post-meta">Published on {{ post.date | date("MMMM d, yyyy") }} by Andrew Knowles</p>
        {% if post.data.description %}
          <p class="post-excerpt">{{ post.data.description }}</p>
        {% endif %}
        <a href="{{ post.url }}" class="cta-button">Read More &rarr;</a>
      </article>
    {% endfor %}
  </main>
</div>

{% include "components/footer.njk" %}
